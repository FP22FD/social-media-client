{
  "name": "css-frameworks-ca",
  "version": "1.0.2",
  "description": "Test",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "npm-run-all --parallel go-live sass-watch",
    "go-live": "live-server",
    "sass-watch": "sass --watch src/scss:dist/css",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "test": "npm run test-unit && npm run test-e2e-cli",
    "test-unit": "jest --passWithNoTests",
    "test-e2e": "cypress open",
    "test-e2e-report": "cypress run --reporter mochawesome",
    "test-e2e-cli": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FP22FD/social-media-client.git"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FP22FD/social-media-client/issues"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "cypress": "^13.7.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.72.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}